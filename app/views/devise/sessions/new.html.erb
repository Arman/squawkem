<br/>
<h2>Sign in</h2>
<br/>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>


  <div class="clearfix">
    <%= f.label :email, :for => "xlInput" %>
    <div class="input">   
      <%= f.email_field :email %>
    </div>
  </div>

  <div class="clearfix">
    <%= f.label :password, :for => "xlInput" %>
    <div class="input">   
      <%= f.password_field :password %>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="clearfix">
    	<%= f.label :remember_me, :for => "checkbox" %>
    	<div class="input">
    		<%= f.check_box :remember_me %> 
    	</div>
    </div>
  <% end -%>


  <div class="clearfix">
    <div class="input">
      <%= f.submit "Sign in", :class =>"btn small primary" %>
    </div>
  </div>  

<% end %>

<%= render :partial => "devise/shared/links" %>

