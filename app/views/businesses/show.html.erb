<div id="businessName" class="row">
  <div class="span14">
    <h2><%= @business.name %></h2>
  </div>
</div>

<div id="businessDetails" class="row">
  <div class="span9">
    <div class="row"><div class="span9"><p><%= @business.address %>, <%= @business.city %>, <%= @business.state %></p></div></div>
    <div class="row"><div class="span9"><p><%= @business.phone %></p></div></div>
    <div class="row"><div class="span9"><p><%= @business.url %></p></div></div>
    <div class="row"><div class="span9"><p><%= @business.description %></p></div></div>
    <div class="row"><div class="span9">&nbsp</div></div>
    <div class="row">
      <div class="span1">&nbsp</div>
      <div class="span7"><%= render  :partial => 'reviews/form' %></div>
      <div class="span1">&nbsp</div>
    </div>
  </div>
  <div id="businessMap" class="span5">
    <% if @business.address then %>
      <%= gmaps("markers" => {"data" => @json}, "map_options" => {"auto_zoom" => false, "zoom" => 11} ) %>
    <% end %>
  </div>
</div>

<div class ="row">
  <div class="span14">
    &nbsp
  </div>
</div>

<div id="businessReviews" class ="row">
  <div class="span14">
    <table id="listBusinesses" class="tablesorter">
      <thead> 
        <tr>
          <th> Reviewer </th>
          <th> Date </th>
          <th> Speed </th>
          <th> Quality </th>
          <th> Usability </th>
          <th> Affordability </th>
          <th> Warranty </th>
          <th> Kindness </th>
          <th> Comments </th>
        </tr>
      </thead>
      <tbody>
        <%= render  :partial => 'reviews/review', :collection => @business.reviews %>
      </tbody>
    </table>
  </div>
</div>

<div id="businessLinks" class="row">
  <div class="span14">
<%= link_to 'Edit', edit_business_path(@business) %> |
<%= link_to 'Back', businesses_path %>
  </div>
</div>