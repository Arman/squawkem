<div class="container">

  <div class="row">
    <div class="span16">
    <h3> Your source for getting home projects done in San Francisco Bay Area! </h3>
    </div>
  </div>

  <div class="row">
    <div class="span16">
      <h4> Search Businesses: </h4>
    </div>
  </div>
  <div class="row">
    <div class="span16" style="background:#eeedef;">
      <form action="/searches/new" class="form-stacked">
        <div class="row">
          <div class="span5">
            <label for="search_for">Search for <span>(e.g. landscaping, electrician, tile)</span></label>
            <input class="xlarge" id="search_for" name="search_for" size="30" type="text">
          </div>        
          <div class="span5">  
            <label for="search_near">Near <span>(Address, City, State or Zip)</span></label>
            <input class="xlarge" id="search_near" name="search_near" size="30" type="text">
          </div>          
          <div class="span2" style="vertical-align:middle"> 
            <label for="search_button">&nbsp</label>
            <%= submit_tag "Search", :name => "search", :class => "btn medium primary" %>
          </div>          
        </div>
      </form>
    </div>
  </div>

  <hr/>
  <div class="row">
    <div class="span16">
      <h4> Highest Rated Busineses: </h4>
    </div>
  </div>
  <div class="row">
    <div class="span16">
      <div class = "row" >   
          <% @top_categories.each do |c| %>
            <%= '</div><div class = "row">'.html_safe if @top_categories.index(c) == 3 %>
            <div class="span4">
              <b><%= link_to c.name, new_search_path(:category_id => c.id  ) %></b>
              <ol>
                <% c.businesses.all.sort! {|a,b| b.avg_review <=> a.avg_review }.take(5).each do |b| %>
                  <li><%= link_to b.name, b %> <%= " (" + b.avg_review.to_s + ")" %></li>
                <% end %>
              </ol>
            </div>
            <%= '<div class="span1">&nbsp</div>'.html_safe unless @top_categories.index(c) == ( 2 || 4 )%>
          <% end %>
      </div>
    </div>
  </div>

  <hr/>
  <div class="row">
    <div class="span16">
      <h4> Browse Categories: </h4>
    </div>
  </div>
  <div class="row">
    <div class="span16">
      <div class = "row" >   
          <% @categories.each do |c| %>
            <%= '</div><div class = "row">'.html_safe if (@categories.index(c)+1)%3 == 1   %>
            <div class="span4">
              <b><%= link_to c.name, new_search_path(:category_id => c.id  ) %> <%= c.businesses.size.to_s%></b>
            </div>
            <%= '<div class="span1">&nbsp</div>'.html_safe unless (@categories.index(c)+1)%3 == 0 %>
          <% end %>
      </div>
    </div>
  </div>

  <hr/>
  <div class="row">
    <div class="span16">
      <h4> Newest Businesses: </h4>
    </div>
  </div>
  <div class="row">
    <div class="span16">
      <% if @new_businesses.empty? then %>
        <div class="row"><div class="span16">Please help us fill our database by <%= link_to 'adding a new business', new_business_path %></div>
      <% else %>
        <div class="row">
          <div class="span16">
           <table id="listBusinesses" class="tablesorter">
              <%= render 'businesses/table_header' %>
              <tbody>
                <%= render :partial => "businesses/table_row", :collection => @new_businesses %>
              </tbody>
          </table>
        </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="span16">
      <p><%= link_to 'New business', new_business_path %></p>
    </div>
  </div>
</div>
 




