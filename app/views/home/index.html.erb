<div class="container">
  <div class="row">
    <div class="span13" style="background:#fff2d2; padding: 20px 20px 0px 60px ">
      <%= form_tag root_path, :method => :get do %>
        <b>
          Search for <%= text_field_tag :search_for, params[:search_for], :class => 'large' %>
          near <%= text_field_tag :search_near, params[:search_near], :class => 'large' %>
          <%= submit_tag "Search", :name => "search", :class => "btn small primary" %>
          <%= submit_tag "Show All", :name => "show_all", :class => "btn small" %>
        </b>
      <% end %>
    </div>
    <div class="span1">&nbsp</div>
  </div>
  <div class="row"><div class="span14">&nbsp</div></div>
  <div class="row">
    <div class="span14">
      <h3><%= @list_header %> </h3>
    </div>
  </div>
  <div class="row">
    <div class="span14">
      <% if @businesses.empty? then %>
        <div class="row"><div class="span14">No businesses matched your search. Try another search or <%= link_to 'add a new business', new_business_path %></div>
      <% else %>
        <div class="row"><div class="span14"><%= gmaps4rails(@json) %></div></div>
        <div class="row"><div class="span14">&nbsp</div></div>
        <div class="row">
          <div class="span14">
           <table>
            <tr>
              <th>Business Name</th>
              <th>SQUAWK </th>
              <th> Total Score </th>
              <th> City </th>
              <th> State </th>
              <th> Distance </th>
            </tr>
          <% @businesses.each do |b| %>
            <tr>
              <td><%= link_to b.name, b %></td>
              <td><%= b.description %></td>
              <td><%=  !b.reviews.blank? ? (b.reviews.average(:speed)+ b.reviews.average(:quality) + b.reviews.average(:usability) +
                        b.reviews.average(:affordability) + b.reviews.average(:warranty) + b.reviews.average(:kindness)).to_int : "N/A" %>
                </td>
              <td><%= b.city %></td>
              <td><%= b.state %></td>
              <td><%= !params[:search_near].blank? ? b.distance.round(1).to_s + " miles" : "N/A" %></td>
            </tr>
          <% end %>
          </table>
        </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="span14">
      <p><%= link_to 'New business', new_business_path %></p>
      <p><%= link_to 'New job', root_path %></p>
    </div>
  </div>
</div>
 




